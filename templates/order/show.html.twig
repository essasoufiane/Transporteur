{% extends 'base.html.twig' %}

{% block title %}Details de commande
{% endblock %}

{% block body %}
	<div class="video-bg">
		<video width="320" height="240" autoplay loop muted>
			<source src="https://assets.codepen.io/3364143/7btrrd.mp4" type="video/mp4">
			Your browser does not support the video tag.
		</video>
	</div>
	<div class="dark-light">
		<svg viewbox="0 0 24 24" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round">
			<path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"/></svg>
	</div>

	{# ----header desktop--- #}
	<div class="app">
		{% include "partials/header1.html.twig" %}
		{# ----navbar left--- #}
		<div class="wrapper">
			<div class="left-side">
				<div class="side-wrapper">
					{% include "partials/navleft.html.twig" %}
				</div>
			</div>

			{# -----header mobile ---------- #}
			<div class="main-container">
				{% include "partials/headermobile.html.twig" %}

				<main class="content-wrapper">

				<table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Départ</th>
                <td>{{ order.depart }}</td>
            </tr>
            <tr>
                <th>Déstination</th>
                <td>{{ order.destination }}</td>
            </tr>
            <tr>
                <th>Date de départ</th>
                <td>{{ order.dateReservation ? order.dateReservation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de reservation</th>
                <td>{{ order.dateCreation ? order.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
	<button class="content-button w-25 animate__flipInY animate__animated">
					<a href="{{ path('show_order') }}" class=" text-decoration-none side-title">retour</a></button>
				</main>
			</div>
		</div>
		<div class="overlay-app"></div>
	</div>

{% endblock %}
