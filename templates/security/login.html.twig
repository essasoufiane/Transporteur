{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="container w-50 my-5 w-25  border p-2  text-center text-white forme ">
		<form method="post" class="w-100">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Déconnection</a>
				</div>
			{% endif %}
<div  class=" container m-5">
			<h1 class="h3 mb-3 font-weight-normal my-5 p-3 ">Merci de vous connecter
			</h1>
			<label class=" text-white p-2" for="inputEmail">Votre adresse email
			</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="merci de saisir votre adresse email" class=" inputshape form-control" autocomplete="email" required autofocus>
			<label for="inputPassword" class="text-white p-2">Password</label>
			<input type="password" name="password" id="inputPassword" placeholder="merci de saisir votre mot de passe " class="form-control" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Remember me
				</label>
			</div>


			<button class="btn btn-lg btnvalider btn-block p-2 my-5" type="submit">
				Se connecter
			</button>
		</form>
	</div>
	
	</div>
{% endblock %}
